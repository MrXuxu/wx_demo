<!--pages/index/index.wxml-->
<view class="banner">
    <image src="{{banner}}" mode="aspectFill" />
</view>
<view class="content">
    <view class="head">
        <text class="title">豆瓣电影榜单集合</text>
        <text>最新，最IN的影视信息收集~</text>
    </view>
    <view class="sort">
        <view class="inTheaters" catchtap="onClick" data-type="in_theaters">
            <text>正在热映</text>
            <text class="arrow">></text>
        </view>
        <view class="inComing" catchtap="onClick" data-type="coming_soon">
            <text>即将上映</text>
            <text class="arrow">></text>
        </view>
        <view class="top250" catchtap="onClick" data-type="top250">
            <text>TOP250</text>
            <text class="arrow">></text>
        </view>
    </view>
</view>
