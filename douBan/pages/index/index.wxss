/* pages/index/index.wxss */
.content {
    padding: 20rpx;
    box-sizing: border-box;
    color: #333;
}
.banner {
    width: 100%;
}
.banner image {
    width: 100%;
    height: 420rpx;
}

.head {
    display: flex;
    flex-direction: column;

    margin-top: 20rpx;
    margin-left: 50rpx;
}
.title {
    font-weight: bold;
    font-size: 21pt;
    margin-bottom: 15rpx;
}
.title + text {
    font-size: 11pt;
    color: #ccc;
}

/* ----sort---- */
.inTheaters,
.inComing,
.top250 {
    width: 100%;
    height: 150rpx;
    line-height: 150rpx;
    margin: 15rpx auto;
    padding: 0 30rpx;
    box-sizing: border-box;
    background-color: #fafafa;

    cursor: pointer;
}
.arrow {
    float: right;
}